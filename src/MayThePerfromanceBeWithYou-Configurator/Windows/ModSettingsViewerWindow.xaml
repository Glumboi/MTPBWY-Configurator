<ui:UiWindow
    x:Class="MayThePerfromanceBeWithYou_Configurator.Windows.ModSettingsViewerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MayThePerfromanceBeWithYou_Configurator.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ModSettingsViewer"
    Width="800"
    Height="500"
    Background="#2d2d2d"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="MTPBWY-Configurator"
            Icon="../Assets/MBTPBWY-Logo.png"
            UseSnapLayout="True" />

        <Border Grid.Row="1" Padding="10">
            <Frame x:Name="WindowFrame" />
        </Border>
    </Grid>
</ui:UiWindow>